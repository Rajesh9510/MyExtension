// manifest.json
{
    "manifest_version": 3,
    "name": "Tab Title Getter",
    "version": "1.0",
    "description": "A Chrome extension to display the title of the current tab.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "tabs"
    ]
  }
  